{
  "name": "FSH in VS Code",
  "image": "ghcr.io/bonfhir/ig-toolbox:latest",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "fhir-shorthand.vscode-fsh",
        "jebbs.plantuml"
      ]
    }
  },
  "mounts": [
    "source=${env:USERPROFILE}\\.gitconfig,target=/home/vscode/.gitconfig,type=bind",
    "source=${env:USERPROFILE}\\.ssh,target=/home/vscode/.ssh,type=bind"
  ]
}